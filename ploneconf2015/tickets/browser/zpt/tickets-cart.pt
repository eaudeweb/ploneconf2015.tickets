<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>

<div metal:fill-slot="content-core" ng-app="PloneConfTickets" class="ploneconf-tickets">
  <div class="cart-summary">
    <a tal:attributes="href string:${context/absolute_url}/tickets.cart">
      <ngcart-summary></ngcart-summary>
    </a>
  </div>

  <form action="." method="post" ng-controller="PloneConfTicketsCtrl"  tal:attributes="
      data-price view/price;
      data-vat view/vat;
      data-currency view/currency;
    ">
    <ngcart-cart></ngcart-cart>
    <textarea>{{ getCart() }}</textarea>

    <div class="form-group pull-right" ng-show="chartNotEmpty()">
      <button type="submit" name="form.submit" class="btn btn-sm btn-primary">Proceed to checkout</button>
    </div>

    <div class="form-group">
      <a class="btn btn-sm btn-primary" href="tickets.buy" >
        Add
        <span ng-show="chartNotEmpty()">another</span>
        <span ng-show="!chartNotEmpty()">a</span>
        ticket
      </a>
    </div>
  </form>

  <div class="clearfix"></div>

</div>

</body>
</html>
