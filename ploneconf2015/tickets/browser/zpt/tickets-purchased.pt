<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>

<div metal:fill-slot="content-title"  tal:define="approved view/approved; message view/message;">
  <h1 class="documentFirstHeading">
    <tal:title tal:replace="context/title_or_id"/>
    <tal:approved tal:condition="approved">- Thank you</tal:approved>
    <tal:error tal:condition="not:approved">- Error</tal:error>
  </h1>
</div>

<div metal:fill-slot="content-core" ng-app="PloneConfTickets" tal:define="approved view/approved">

  <div tal:condition="not:approved" class="table">
    <h2>Unable to process your order</h2>
    <div class="table">
      For more information please contact us at
      <a tal:attributes="href python:'mailto:tickets@eaudeweb.ro?Subject=Error while processing order #%s' % view.order">tickets@eaudeweb.ro</a>
    </div>
    <div class="form-group pull-right">
      <a class="btn btn-sm btn-primary" tal:attributes="href string:${context/absolute_url}/tickets.buy">Try again</a>
    </div>
  </div>

  <div tal:condition="approved" ng-controller="PloneConfTicketsThanks" class="text-center table">
    Thank you for your purchase. You will shortly receive an email with details about your order.
  </div>

  <div class="clearfix"></div>

</div>

</body>
</html>
