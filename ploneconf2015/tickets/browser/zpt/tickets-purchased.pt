<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>

<div metal:fill-slot="content-title">
  <h1 class="documentFirstHeading">
    <tal:title tal:replace="context/title_or_id"/>
    - Thank you
  </h1>
</div>

<div metal:fill-slot="content-core" ng-app="PloneConfTickets" tal:define="
    approved view/approved;
    message view/message;
    ">

  <div tal:condition="not:approved">
    <h2>An error occurred while processing your order</h2>
    <p class="bg-danger">
      <span>Bank response:</span>
      <span tal:content="message">Error message</span>
    </p>
    <div class="form-group pull-right">
      <a class="btn btn-sm btn-primary" tal:attributes="href string:${context/absolute_url}/tickets.cart">Try again</a>
    </div>
  </div>

  <div tal:condition="approved" ng-controller="PloneConfTicketsThanks">
    Thank you for your purchase. You will shortly receive an email with details about your order.
  </div>

  <div class="clearfix"></div>

</div>

</body>
</html>
